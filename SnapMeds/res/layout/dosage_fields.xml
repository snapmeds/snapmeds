<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <EditText
    	android:id="@+id/dosageQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp" 
        android:hint="@string/dosage_quantity_example" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingTop="16dp" >
        
        <Spinner
            android:id="@+id/numTimes"
            android:layout_width="0dp"
            android:layout_height="wrap_content" 
            android:layout_weight="1" />
        
        <TextView 
            android:id="@+id/frequencyConnector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frequency_connector" />
        
        <Spinner
            android:id="@+id/interval"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        
        <Spinner 
            android:id="@+id/unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content" 
            android:layout_weight="2" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp" >
        
        <TextView 
            android:id="@+id/durationConnector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_marginLeft="5dp"            
            android:text="@string/duration_connector" />        

        <Spinner
            android:id="@+id/durationNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        
        <Spinner 
            android:id="@+id/durationUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content" 
            android:layout_weight="2" />
                
    </LinearLayout>
    
    <TextView
        android:id="@+id/otherInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/other_info_label" />    
    
    <EditText
    	android:id="@+id/otherInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp" 
        android:hint="@string/other_info" />
        
</LinearLayout>